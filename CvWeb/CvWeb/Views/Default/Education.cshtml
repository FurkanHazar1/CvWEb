@using CvWeb.Models.Entitiy
@model List<education_tb>

<div class="resume-section-content">
	<h2 class="mb-5">Education</h2>
	@foreach (var x in Model)
	{
		<div class="d-flex flex-column flex-md-row justify-content-between mb-5">
			<div class="flex-grow-1">
				<h3 class="mb-0">@x.Header</h3>
				<div class="subheading mb-3">@x.lowerHeader1</div>
				<div>@x.lowerHeader2</div>
				<p>GPA: @x.gno</p>
			</div>
			<div class="flex-shrink-0"><span class="text-primary">@x.date</span></div>
		</div>
	}
	
</div>
